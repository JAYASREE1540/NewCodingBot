import math

# Get user input for the value of n
n = int(input("Enter the value of n: "))

# Initialize the sum of the series
series_sum = 0

# Calculate the sum of the series
for i in range(1, n + 1):
    series_sum += i / math.factorial(i)

# Print the result
print(f"The sum of the series is: {series_sum:.6f}")
